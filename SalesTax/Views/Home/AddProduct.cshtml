@model ILineItem

@{
	ViewBag.Title = "Add New Products";
}

	<form  asp-controller="home" app-action="AddProduct" method="post">
		<div>
			<label asp-for="Name" class="col-sm-2 col-form-label"></label>
			<input asp-for="Name" class="form-control" placeholder="Name"/>
		</div>
		<div>
			<label asp-for="Description" class="col-sm-2 col-form-label"></label>
			<input asp-for="Description" class="form-control" placeholder="Description"/>
		</div>
		<div>
			<label asp-for="Discount" class="col-sm-2 col-form-label"></label>
			<input asp-for="Discount" class="form-control" placeholder="Discount" />
		</div>
		<div>
			<label asp-for="UnitPrice" class="col-sm-2 col-form-label"></label>
			<input asp-for="UnitPrice" class="form-control" placeholder="UnitPrice"/>
		</div>
		<div>
			<label asp-for="PhotoPath" class="col-sm-2 col-form-label"></label>
			<input asp-for="PhotoPath" class="form-control" placeholder="PhotoPath"/>
			<label class="custom-file-label">Choose File</label>
		</div>

		<div>
			<div class="col-sm-10">
				<button type="submit" class="btn btn-primary">Add</button>
			</div>
		</div>
	</form>