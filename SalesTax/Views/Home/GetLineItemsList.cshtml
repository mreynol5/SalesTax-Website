@model List<ILineItem>

@{ 
	ViewBag.Title = "Item List";
}

	<div class="card-deck">
		@foreach (var item in Model)
		{
			var photoPath = "~/Images/theSuper";
			<div class="card m-3" style="min-width: 18rem; max-width: 30.5%;">
				<div class="card-header">
					
				</div>

			</div>

			<div class="card-header">
				<h3>@item.Name</h3>
			</div>
			<img class="card-img-top image img-thumbnail" src="@photoPath" asp-append-version="true" />
			<div class="card-footer text-center">
				<a asp-controller="home" asp-action="details" asp-route-id="@item.Id" class="btn btn-primary m-1">View</a>
				<a asp-action="edit" asp-controller="home" asp-route-id="@item.Id" class="btn btn-primary m-1">Edit</a>
				<a href="#" class="btn btn-danger m-1">Delete</a>
			</div>
		}
	</div>
