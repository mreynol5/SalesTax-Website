@model HomeProductAddViewModel

@{
	ViewBag.Title = "Add New Products";
}

<form asp-controller="home" app-action="AddProduct" method="post">
	<div class="form-group row" >
		<label asp-for="Name" class="col-sm-2 col-form-label" > </label>
		<div class="col-sm-10">
			<input asp-for="Name" class="form-control" placeholder="Name" />
		</div>		
	</div>
	<div>
		<label asp-for="Description" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input asp-for="Description" class="form-control" placeholder="Description" />
		</div>
	</div>
	<div>
		<label asp-for="Discount" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input asp-for="Discount" class="form-control" placeholder="Discount" />
		</div>
	</div>
	<div>
		<label asp-for="UnitPrice" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input asp-for="UnitPrice" class="form-control" placeholder="Unit Price" />
		</div>
	</div>
	<div>
		<label asp-for="PhotoPath" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input asp-for="PhotoPath" class="form-control" placeholder="Photo Path" />
		</div>
	</div>
	<div>
		<button type = "submit">Add Product</button>
	</div>

</form>