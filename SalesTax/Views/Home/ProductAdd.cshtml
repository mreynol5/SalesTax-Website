@model HomeProductAddViewModel

@{
	ViewBag.Title = "Add New Products";
	
}
<form enctype="multipart/form-data" asp-controller="home" app-action="ProductAdd" method="post" class=" = "mt-3">
	<div class="form-group row">
		<label asp-for="Name" class="col-sm-2 col-form-label"> </label>
		<div class="col-sm-10">
			<input asp-for="Name" class="form-control" placeholder="Name" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
	</div>

	<div  class="form-group row">
		<label asp-for="Description" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input asp-for="Description" class="form-control" placeholder="Description" />
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group row">
		<label asp-for="Discount" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<select asp-for="Discount" class="custom-select mr-sm-2"
					asp-items="Html.GetEnumSelectList<Disc>()">
				<option value="">Please Select</option>
			</select>
			<span asp-validation-for="Discount"></span>
		</div>
	</div>
	<div>
		<label asp-for="UnitPrice" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input asp-for="UnitPrice" class="form-control" placeholder="Unit Price" />
		</div>
	</div>
	<div>
		<label asp-for="Photo" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<div class="custom-file">
				<input asp-for="Photo" class="form-control custom-file-input" />
				<label class="custom-file-label">Choose File...</label>
			</div>		
		</div>
	</div>
	<div>
		<button type="submit">Add Product</button>
	</div>
@section Scripts {
	<script>
		$( document ).ready( function () {
			$( ' .custom-file-input' ).on( "change", function ()
			{
				var filename = $( this ).val().split( "\\" ).pop();
				$( this ).next( ' .custom-file-label' ).html( filename );
			} );
	</script>
}
</form>